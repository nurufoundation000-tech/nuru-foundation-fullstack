{
  "version": 2,
  "builds": [
    {
      "src": "backend/api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/courses/progress",
      "dest": "/backend/api/courses/index.js"
    },
    {
      "src": "/api/courses/(.*)",
      "dest": "/backend/api/courses/index.js"
    },
    {
      "src": "/api/auth/(.*)",
      "dest": "/backend/api/auth/index.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/backend/api/$1/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "buildCommand": "cd backend && npm install && npx prisma generate"
}