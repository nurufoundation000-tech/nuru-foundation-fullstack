{
  "functions": {
    "api/**/*.js": {
      "memory": 1024
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/((?!api/|favicon.ico|robots.txt).*)",
      "destination": "/index.html"
    }
  ],
  "buildCommand": "cd backend && npm install && npx prisma generate",
  "outputDirectory": "frontend"
}