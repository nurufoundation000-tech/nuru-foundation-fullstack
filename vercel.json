{
  "version": 2,
  "builds": [
    {
      "src": "api/auth/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/users/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/courses/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/lessons/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/assignments/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/submissions/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/moderation/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/admin/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/health/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/(.*)",
      "dest": "api/auth/index.js"
    },
    {
      "src": "/api/users/(.*)",
      "dest": "api/users/index.js"
    },
    {
      "src": "/api/courses/(.*)",
      "dest": "api/courses/index.js"
    },
    {
      "src": "/api/lessons/(.*)",
      "dest": "api/lessons/index.js"
    },
    {
      "src": "/api/assignments/(.*)",
      "dest": "api/assignments/index.js"
    },
    {
      "src": "/api/submissions/(.*)",
      "dest": "api/submissions/index.js"
    },
    {
      "src": "/api/moderation/(.*)",
      "dest": "api/moderation/index.js"
    },
    {
      "src": "/api/admin/(.*)",
      "dest": "api/admin/index.js"
    },
    {
      "src": "/api/health",
      "dest": "api/health/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "buildCommand": "cd backend && npm install && npx prisma generate",
  "env": {
    "NODE_ENV": "production",
    "DATABASE_URL": "postgresql://postgres:xlqMhanpHJOXHffmBrPDVJThKrEiJaAc@shinkansen.proxy.rlwy.net:31965/railway"
  }
}
